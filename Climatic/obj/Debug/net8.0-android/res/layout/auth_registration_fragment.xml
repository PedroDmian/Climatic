<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">
    <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@+id/textViewLoginLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logotipo_preview"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="Registrar"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_19sdp"
            android:textColor="@color/colorTextWhite"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayoutEmail"
            app:layout_constraintEnd_toEndOf="@id/imageViewLogo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/imageViewLogo"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <EditText
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            style="@style/Widget.Custom.TextInputLayout"
            android:hint="Email"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLoginLabel"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="@dimen/_13sdp"
    />

    <EditText
            android:id="@+id/textInputLayoutName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            style="@style/Widget.Custom.TextInputLayout"
            android:hint="Nombre"
            app:layout_constraintEnd_toEndOf="@id/textInputLayoutEmail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutEmail"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmail"
            android:layout_marginTop="@dimen/_30sdp"
    />

    <EditText
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            style="@style/Widget.Custom.TextInputLayout"
            android:hint="Contraseña"
            app:layout_constraintEnd_toEndOf="@id/textInputLayoutName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutName"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName"
            android:layout_marginTop="@dimen/_30sdp"
    />

    <EditText
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            style="@style/Widget.Custom.TextInputLayout"
            android:hint="Contraseña"
            app:layout_constraintEnd_toEndOf="@id/textInputLayoutName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutName"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName"
            android:layout_marginTop="@dimen/_30sdp"
    />

    <EditText
            android:id="@+id/textInputLayoutBirthDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/Widget.Custom.TextInputLayout"
            android:hint="Select Date"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegister"
            app:layout_constraintEnd_toEndOf="@id/textInputLayoutPassword"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutPassword"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPassword"
            android:layout_marginTop="@dimen/_30sdp"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegister"
            style="@style/AppTheme.TextView.SF.Medium.Black.12ssp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@color/colorTextWhite"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="Registrar"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayoutBirthDate"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutBirthDate"
            app:layout_constraintEnd_toEndOf="@id/imageViewLogo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/imageViewLogo"/>
</androidx.constraintlayout.widget.ConstraintLayout>