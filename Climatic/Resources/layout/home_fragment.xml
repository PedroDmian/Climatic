<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:clickable="true"
        android:focusable="true">

    <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/sol"
            android:contentDescription="Weather Icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_5sdp"/>

    <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_55sdp"
            android:text="22Â°C"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/weatherIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_18sdp"/>

    <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monterrey"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/temperatureTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_10sdp"/>

    <LinearLayout
            android:id="@+id/box1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/holo_blue_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp">

        <TextView
                android:id="@+id/box1Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11 km/h"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>

        <TextView
                android:id="@+id/box1Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viento"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/holo_green_light"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toStartOf="@id/box3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/box2Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="72%"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>

        <TextView
                android:id="@+id/box2Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humedad"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/box3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/holo_red_light"
            app:layout_constraintStart_toEndOf="@id/box2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:id="@+id/box3Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7%"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>

        <TextView
                android:id="@+id/box3Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Prob. de precipitacione"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
